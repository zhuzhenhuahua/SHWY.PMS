@model SHWY.Model.DB.Servers
@{
    ViewBag.Title = "ServerEdit";
    Layout = "~/Views/Shared/_BaseContent.cshtml";
}

<form id="formServerEidt">
    <table>
        <tr>
            <td>@Html.LabelFor(p => p.sid)</td>
            <td>@Html.TextBoxFor(p => p.sid, new { @class = "easyui-textbox", data_options = "required:true,readonly:" + ViewData["isRealOnly"] + "" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.name)</td>
            <td>@Html.TextBoxFor(p => p.name, new { @class = "easyui-textbox", data_options = "required:true" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.itemid)</td>
            <td>@Html.DropDownListFor(p => p.itemid, ViewBag.ItemList as IEnumerable<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false", style = "width:170px;" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.remark)</td>
            <td>@Html.TextBoxFor(p => p.remark, new { @class = "easyui-textbox",data_options="multiline:true",style="width:600px;height:50px;" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.loginName)</td>
            <td>@Html.TextBoxFor(p => p.loginName, new { @class = "easyui-textbox" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.password)</td>
            <td>@Html.TextBoxFor(p => p.password, new { @class = "easyui-textbox" })</td>
        </tr>
    </table>
</form>

