@model SHWY.Model.DB.Items
@{
    ViewBag.Title = "修改项目";
    Layout = "~/Views/Shared/_BaseContent.cshtml";
}

<form id="formItemEidt">
    <table>
        <tr>
            <td>@Html.LabelFor(p => p.NAME)</td>
            <td>@Html.TextBoxFor(p => p.NAME, new { @class = "easyui-textbox", data_options = "required:true" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.ALIAS)</td>
            <td>@Html.TextBoxFor(p => p.ALIAS, new { @class = "easyui-textbox" })</td>
        </tr>
    </table>
    @Html.HiddenFor(p=>p.ItemID)
</form>

