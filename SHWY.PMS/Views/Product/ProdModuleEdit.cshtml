@model SHWY.Model.DB.ProdModule
@{
    ViewBag.Title = "ProdModuleEdit";
    Layout = "~/Views/Shared/_BaseContent.cshtml";
}

<form id="formProdModuleEidt">
    <table>
        <tr>
            <td>产品：</td>
            <td>
                @Html.DropDownListFor(p => p.ProID, ViewBag.ProdList as IEnumerable<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false,required:true,readonly:" + ViewData["isRealOnly"] + "", style = "width:170px;" })
            </td>
        </tr>
        <tr>
            <td>模块名称：</td>
            <td>@Html.TextBoxFor(p => p.NAME, new { @class = "easyui-textbox", data_options = "required:true" })</td>
        </tr>
        <tr>
            <td>描述</td>
            <td>@Html.TextBoxFor(p => p.Description, new { @class = "easyui-textbox", data_options = "multiline:true", style = "width:350px;height:50px;" } )</td>
        </tr>
    </table>
    @Html.HiddenFor(p=>p.ModuleID)
</form>

