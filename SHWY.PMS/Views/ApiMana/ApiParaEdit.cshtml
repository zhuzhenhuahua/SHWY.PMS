@model SHWY.Model.DB.ApiParameter
@{
    ViewBag.Title = "ApiParaEdit";
    Layout = "~/Views/Shared/_BaseLayOutContent.cshtml";
}

<form id="formApiParaEidt">
    <table>
        <tr>
            <td>参数中文名:</td>
            <td>@Html.TextBoxFor(p => p.CName, new { @class = "easyui-textbox", data_options = "required:true" })</td>
        </tr>
        <tr>
            <td>参数名:</td>
            <td>@Html.TextBoxFor(p => p.EName, new { @class = "easyui-textbox", data_options = "required:true" })</td>
        </tr>
        <tr>
            <td style="padding-left:20px;">数据类型:</td>
            <td>@Html.DropDownListFor(p => p.DataType, ViewBag.DataTypeList as IEnumerable<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false", style = "width:170px;" })</td>
        </tr>

        <tr>
            <td>参数类型:</td>
            <td>@Html.DropDownListFor(p => p.InOROutPut, ViewBag.InOrOutPutList as IEnumerable<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false", style = "width:170px;" })</td>
        </tr>
        <tr>
            <td>允许NULL值:</td>
            <td>@Html.DropDownListFor(p => p.IsNull, ViewBag.ISNULLList as IEnumerable<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false", style = "width:170px;" })</td>
        </tr>
        <tr>
            <td>备注:</td>
            <td>@Html.TextBoxFor(p => p.Remark, new { @class = "easyui-textbox", data_options = "multiline :true", style = "width:340px;height:50px;" })</td>
        </tr>
    </table>
    @Html.HiddenFor(p => p.ParaID)
    @Html.HiddenFor(p => p.ApiUrlID)
</form>


